<p id="notice"><%= notice %></p>
<% if @category then%>
	<h1><%= @category.name %>/Products</h1>
<% else %>
	<h1>Products</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
	      <td><a href="products/<%= product.product_id%>"> <%= product.name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @all_products.size > @limit.to_i %>
<% (@all_products.size/@limit.to_f).ceil.times do |n| %>
	<% if @offset.to_i == n*@limit %>
		<%= n+1 %>
	<% else %>
		<%= link_to (n + 1).to_s, products_path(category: @category.id,offset: n*@limit) %>
	<% end %>
<% end %>
<% end %>
