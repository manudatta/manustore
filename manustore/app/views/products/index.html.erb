<p id="notice"><%= notice %></p>
<% if @category then%>
	<h1><%= @category.name %>/Products</h1>
<% else %>
	<h1>Products</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

