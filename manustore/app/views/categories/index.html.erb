<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
	      <td><a href="/products?offset=0&category=<%= category.id %>"><%= category.name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

